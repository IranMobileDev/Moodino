<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_item</item>
        <item name="itemTextColor">@color/bottom_navigation_item</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/view_bg_stroke</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardElevation">16dp</item>
        <item name="contentPadding">14dp</item>
    </style>

    //removed padding used for days in a row card in stats fragment
    <style name="CardViewStyleNoPadding" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
            <item name="cardElevation">16dp</item>
    </style>

    <style name="cardHeaderTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.Material3.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_bg</item>
    </style>

    <style name="checkedDay" >
        <item name="android:src">@drawable/ic_checked</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="crossedDay" >
        <item name="android:src">@drawable/ic_cross</item>
        <item name="tint">@color/gray</item>
    </style>
</resources>