<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/activityViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_4mdp"
        android:layout_marginEnd="@dimen/_4mdp"
        android:paddingTop="@dimen/_6mdp"
        android:paddingBottom="@dimen/_6mdp">

        <FrameLayout
            android:id="@+id/activityBackground"
            android:layout_width="@dimen/_45mdp"
            android:layout_height="@dimen/_45mdp"
            android:background="@drawable/unselect_activity_bg"
            android:layout_gravity="center_horizontal">
            <com.iranmobiledev.moodino.ui.view.CustomEmojiView
                android:id="@+id/activityIcon"
                android:layout_width="@dimen/_20mdp"
                android:layout_height="@dimen/_20mdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_calendar"
                android:tint="?colorPrimary"/>
        </FrameLayout>
        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityItemText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_9mdp"
            android:layout_marginTop="@dimen/_2mdp"
            android:maxWidth="@dimen/_34mdp"
            android:textAlignment="center"
            android:textColor="@color/gray_title" />
    </LinearLayout>
</layout>