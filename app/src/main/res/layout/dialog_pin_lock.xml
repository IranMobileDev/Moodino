<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_15mdp"
    android:layout_margin="@dimen/_15mdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pinLock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_pin"
            android:textAllCaps="true"
            android:textAppearance="?textAppearanceBody1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30mdp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10mdp">

            <RadioButton
                android:id="@+id/rb_pinLock_1"
                android:layout_width="@dimen/_10mdp"
                android:layout_height="@dimen/_10mdp"
                android:background="@drawable/background_pinlock"
                android:button="@null"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10mdp"/>

            <RadioButton
                android:id="@+id/rb_pinLock_2"
                android:layout_width="@dimen/_10mdp"
                android:layout_height="@dimen/_10mdp"
                android:background="@drawable/background_pinlock"
                android:button="@null"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10mdp"/>

            <RadioButton
                android:id="@+id/rb_pinLock_3"
                android:layout_width="@dimen/_10mdp"
                android:layout_height="@dimen/_10mdp"
                android:background="@drawable/background_pinlock"
                android:button="@null"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10mdp"/>

            <RadioButton
                android:id="@+id/rb_pinLock_4"
                android:layout_width="@dimen/_10mdp"
                android:layout_height="@dimen/_10mdp"
                android:background="@drawable/background_pinlock"
                android:button="@null"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10mdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_30mdp">

            <TextView
                android:id="@+id/btn_pinlock_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/btn_pinlock_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_pinlock_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="?textAppearanceHeadline4"
                android:textColor="@color/black"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_10mdp">

            <TextView
                android:id="@+id/btn_pinlock_4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_pinlock_5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_pinlock_6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textAppearance="?textAppearanceHeadline4"
                android:textColor="@color/black"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_10mdp">

            <TextView
                android:id="@+id/btn_pinlock_7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_pinlock_8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_pinlock_9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:textAppearance="?textAppearanceHeadline4"
                android:textColor="@color/black"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginBottom="@dimen/_40mdp"
            android:gravity="end">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_pinlock_0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="?textAppearanceHeadline4"
                android:foreground="?selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/btn_pinlock_delete"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10mdp"
                android:src="@drawable/ic_baseline_backspace_24"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"
                app:tint="@color/black" />
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>