<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3mdp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_13mdp"
        android:layout_height="@dimen/_13mdp"
        android:layout_marginEnd="@dimen/_3mdp"
        app:tint="?colorPrimary"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/small_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_3mdp"
        android:text="@{activity.title}"
        android:textSize="@dimen/_10mdp"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/_5mdp"
        android:layout_height="@dimen/_5mdp"
        android:src="@drawable/fill_circle"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
