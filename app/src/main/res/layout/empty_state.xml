<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyStateView"
    android:background="@color/background"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emojisContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16mdp"
        app:cardElevation="@dimen/_4mdp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        android:layout_marginTop="@dimen/_12mdp"
        android:layout_gravity="center_horizontal">
        <include
            android:id="@+id/include2"
            layout="@layout/emoji_item" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_56mdp"
        android:layout_marginTop="@dimen/_16mdp"
        android:layout_gravity="center_horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/emptyStateAnimation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250mdp"
            android:layout_marginStart="@dimen/_24mdp"
            android:layout_marginEnd="@dimen/_24mdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empty_state_animation"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_add_first_entry_tap_the_big_plus_button"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/_12mdp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>
        <ImageView
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_25mdp"
            android:src="@drawable/ic_hand_down"
            android:rotation="180"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_6mdp"/>
    </LinearLayout>
</LinearLayout>